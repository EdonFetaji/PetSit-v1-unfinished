@model PetSit.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main class="flex mt-1" style="background-image: url('@Url.Content("~/Content/images/paw_3.jpg")');">
    <div class="border-2 shadow-lg rounded-xl m-auto px-16 py-6 my-16 bg-white">
        <div class="flex flex-col jusify-center">
            <div class="flex">
                <img class="max-w-[15vw] p-8 m-auto" src="~/Content/images/PetSit.png" alt="Alternate Text" />
            </div>

            <section id="registerForm" class="space-y-8">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-lg font-bold mb-[1vw]">Create a new account</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-red-600" }) <!-- Changed here -->

                    <div class="grid grid-cols-2 ">

                        <div class="pr-7">
                            <!-- Email Field -->
                            <div class="py-3">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <input type="text" name="Email" value="" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" />
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="py-3">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <input type="password" name="Password" value="" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" />
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="py-3">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <input type="password" name="ConfirmPassword" value="" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" />
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>
                        </div>

                        <div class="border-l-2 border-bg-gray-600 pl-7">
                            <!-- Name Field -->
                            <div class="py-3">
                                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <input type="text" name="Name" value="" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" />
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>

                            <!-- Profile Picture Upload Field -->
                            <div class="py-3">
                                @Html.Label("Profile Picture", new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <input type="file" name="ProfilePicture" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" />
                                    @Html.ValidationMessage("ProfilePicture", "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>

                            <!-- Bio Field -->
                            <div class="py-3">
                                @Html.LabelFor(m => m.Bio, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    <textarea name="Bio" class="rounded-xl border-2 border-bg-indigo-500 w-full p-1" placeholder="Tell us about yourself..."></textarea>
                                    @Html.ValidationMessageFor(m => m.Bio, "", new { @class = "text-red-600" }) <!-- Changed here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex items-center flex-col my-8">
                        <div class="w-[50%] py-1 bg-blue-500 rounded-xl text-white font-bold text-center m-auto">
                            <input type="submit" value="Register" class="btn btn-outline-dark" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
